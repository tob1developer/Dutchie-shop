<!DOCTYPE html>
<html>
<%- include('header'); -%>
<body>
<form action="/cart" method="POST">

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Gio hàng</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                <tr class="cart_menu">
                    <td class="image">Mẫu Giày</td>
                    <td class="description"></td>
                    <td class="price">Đơn Giá (đ)</td>
                    <td class="quantity">Số Lượng</td>
                    <td class="total">Tổng</td>
                    <td></td>
                </tr>
                </thead>
                <tbody>
                <%list = JSON.parse(data).rows%>
                <%listShoes = JSON.parse(dataAllShoes).rows%>





                <% for (i = 0;i < list.length;i++ ) {%>
                    <% idShoes = list[i].ShoesId %>
                        <% price = listShoes[idShoes].Price%>
                    <tr>
                        <td class="cart_product">
                            <% pathImage = `http://0.0.0.0:3131/${list[i].ShoesId}/1.jpg` %>
                            <a href="/detail/<%= idShoes%>"><img src="<%=pathImage%>" alt="pathImage" width="100" height="100"></a>
                        </td>
                        <td class="cart_description">
                            <h4><a href=""><%= listShoes[idShoes].Name%></a></h4>
                            <input type="text" name ="idShoes" value="<%= idShoes%>"   >

                        </td>
                        <td class="cart_price">
                            <p><%=price%></p>
                            <p>VND</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">
                                <input class="cart_quantity_input" type="text" name="Quaintly" value="<%=list[i].Quaintly%>" autocomplete="off" size="2">
                            </div>
                        </td>
                        <td class="cart_total">
                            <%realprice = price*list[i].Quaintly%>
                            <p class="cart_total_price"><%=realprice%></p>
                            <p>VND</p>
                        </td>
                    </tr>
            <% }%>
                </tbody>
            </table>
        </div>
    </div>
</section>

<section id="do_action">
    <div class="container">

        <div class="row">
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <% value = 0  %>
                        <li>Đơn giá <span><%= value = 0  %></span></li>
                        <li>Tổng <span>0</span></li>
                    </ul>
<!--                    <a class="btn btn-default update" type="submit">Cập nhật</a>-->
                    <button class="btn btn-default update" type="submit">Cập nhật</button>
                    <a class="btn btn-default check_out" href="">Kiểm tra lại</a>
                </div>
            </div>
        </div>
    </div>
</section>
</form>
</body>
<%- include('footer'); -%>
</html>